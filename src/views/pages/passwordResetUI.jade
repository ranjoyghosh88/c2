extends ../layouts/layout 
include ../mixin/headpanel

block content 
    +headpanels('Reset Password ')
    .container
      form#form.form-horizontal(method='post', action='')     
        input#sptoken.form-control(type='hidden', name='sptoken',  value='#{sptoken}')  
        .form-group
          .col-md-4.col-md-offset-4.col-sm-8.col-sm-offset-2
              input#password.form-control(type='password',required='required', name='password',placeholder='New Password')
        .form-group
          .col-md-4.col-md-offset-4.col-sm-8.col-sm-offset-2
              input#cpassword.form-control(type='password', name='cpassword',placeholder='Re-Enter New Password')   
       
        .form-group
          .col-md-4.col-md-offset-4.col-sm-8.col-sm-offset-2
            button#reset.btn.btn-primary.form-control.signin(type='submit') Submit
           
              