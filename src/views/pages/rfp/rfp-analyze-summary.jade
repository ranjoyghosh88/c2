extends ../../layouts/layout_backbone
include ../../mixin/search


block content
	div.
		<style>
			.dataTables_wrapper table thead{
				display:none;
			}
			#rfp-respond-table{
			 width:100%!important; 
			}
			.gray-border {
				border: 1px solid #ddd;
			}
			.blue-border {
				border: 1px solid #38A0DF;
			}
			tr:not(:last-child){
				border-bottom:1px solid #ddd;
			}
		</style>
		<script type="text/html" id='rfp-summary-item'>
			<div class='panel panel-default gray-border response-data' style='padding:15px;margin: 20px 0;'>
				<div class="panel-body">
					<input name="summary-check" class='pull-left' type="checkbox" style="margin-right:10px" class="summary-check" <%= (isChecked?'checked=checked':'') %> >
					<div class="list_cmpny_logo pull-left text-center">
						<img src='<%= cover.logo || rfpReceipent.logo || "/images/CompanyDummyLogo.png" %>' width='100px' class="Logo_Company"/>
					</div>
					<div class="col-xs-10" style="vertical-align:top;margin-left:20px">
						<label class='black'> <%= rfpReceipent.name%> </label>
						<div class="quoted-text expand-collapse" data-less="false" style="text-align:justify"><%= cover.description %><button class="btn btn-link seemoreQtext block hide">more</button>
						</div>
					</div>
				</div>
			</div>
		</script>
	div
		.container-fluid.headpanel
				h2.text-uppercase
					p.font-md.black #{rfp.title}
		.container.header-counter.filterMargin.
			<div class="row"><div class="pull-left"></div><div class="col-xs-12 text-center pull-right SignUpSteps hidden-xs"> <span><span class="outerCircle" style="margin-right:0;width:50px;height:50px;"><span class="circle active" style="position:relative;font-size:23px;width:35px;height:35px;margin-top:8px;">1<span class="blueDash" style="position:absolute;left:35px;margin-top:11px;width:50px"></span></span></span><span class="dash" style="left: 0;margin-top: -10px; position:relative;width:75px"></span><span class="outerCircle" style="margin-right:0;width:50px;height:50px;"><span class="circle" style="position:relative;font-size:23px;width:35px;height:35px;margin-top:8px;">2<span class="blueDash hidden" style="position:absolute;left:35px;margin-top:11px;width:50px"></span></span></span><span class="dash" style="left: 0;margin-top: -10px; position:relative;width:75px"></span><span class="outerCircle" style="margin-right:0;width:50px;height:50px;"><span class="circle" style="position:relative;font-size:23px;width:35px;height:35px;margin-top:8px;">3</span></span></span></div></div>
		.container
				.row
						.col-xs-12.text-center
								h3.bold.font-md.text-primary.margin_T0 List of responses for your RFP
								label.block
		div.container.profileContainer#rfp-respond-summary(style='margin-top:0;')
			table#rfp-respond-table
			.form-group
				.row.marginT_30
					.col-md-12.col-sm-8.text-center
						a.btn.btn-primary.btn-heading.continue.margin0#review-submission(href='#') Continue 
				.row
					.col-md-12.col-sm-8.text-center
						a.back.inline-block.filterMargin(href='/rfp-dashboard/') Go to previous step

block append stylesheet
	link(rel='stylesheet', href='//cdn.datatables.net/1.10.10/css/dataTables.bootstrap.min.css')
