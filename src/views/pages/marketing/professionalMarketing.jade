extends ../../layouts/layout
include ../../mixin/vendors
include ../../mixin/professionals

block content
	#professionalMarketing.marketing
		div.jumbotron
			.container
				.row
					.col-sm-6			
						h2.text-left.font-secondary.text-uppercase.text-primary lorem ipsum dolor sit amet
						p.font-primary Nunc ultricies vitae tellus ornare fringilla. Mauris lacinia maximus nibh ut pharetra. Proin quis sodales enim, quis elementum purus. Curabitur justo metus.
						button.btn.btn-primary.disabled(type="submit") Join Now! 
		div.bar
			.container
				.row
					.col-sm-12
						marquee.margin0.text-inverse TradeRx, Enterprise Software Co, Joined Today - Vestibulum ante ipsum.Cras elementum turpis urna, nec laoreet velit egestas at....

		div.benefits
			.container
				.row
					.col-sm-4
						img.block(src="images/professional_benefit_1.png")
						h2.text-uppercase.text-primary
							strong benefit#1
						p.text-center Qualified Vendors will reach out to you
					.col-sm-4
						img.block(src="images/professional_benefit_2.png")
						h2.text-uppercase.text-tertiary
							strong benefit#2		
						p.text-center View Testimonials and speak to past clients		
					.col-sm-4
						img.block(src="images/professional_benefit_3.png")
						h2.text-uppercase.text-secondary
							strong benefit#3
						p.text-center Post an RFP anonymously, no hassling phone calls
		div.Professionals_carousel
			.container
				.row
					h3.text-secondary Reach the Best Vendors in Business
				.row
					.col-sm-12
						+carousel_professional({ratings:true})
			

		div.vendors_carousel
			.container
				.row
					.col-sm-12
						h3 Other IT Professionals had This to Say
				.row
					.col-sm-12
						+carousel_vendor

		div.join
			.container
				.row
					.col-sm-12
						div.join_border
							.row
								.col-sm-10
									p.text-secondary.text-uppercase.inline-block
										strong Lorem ipsum dolor sit amet, consectetur adipiscing elit... 
								.col-sm-2
									button.btn-primary.btn.disabled Join Now!
						





