          +PreselectBoxQuick(lasData.commnucationMode,[questionData[0].supportCommunicationMode])
        else
          +selectBoxRole(lasData.commnucationMode,"commnucationMode")
      label.error.alert.alert-danger(style="display:none") Please select communication mode
.form-group#postQuestionTags
    .col-xs-12
      select#questionTag.form-control(name='tags',data-tags="true", data-master='getTags',data-placeholder='Tag',  multiple='multiple',style='width:100%')
        if edit == true
          +PreselectBox(lasData.tags,questionData[0].tags)
.form-group.question
    .col-xs-12
      if edit == true
        textarea.form-control#questionText(type='text', name='question',data-errorholder='Question', placeholder='Question ?',style="height:115px")
          | #{questionData[0].question}
      else
        textarea.form-control#questionText(type='text', name='question', data-errorholder='Question', placeholder='Question ?',style="height:115px")
