          +PreselectBoxQuick(lasData.industry,[questionData[0].industry])
        else
          +selectBoxRole(lasData.industry,"Industry")
.form-group
    .col-xs-12
      select#businessProcessArea.form-control(multiple name='businessProcessArea',data-master='businessProcessArea', data-tags="true",data-errorholder='Business Process Area', data-placeholder='Business Process Area',style="width: 100%")
        if edit == true
          +PreselectBoxQuick(lasData.businessProcessArea,questionData[0].businessProcessArea)
      label.error.alert.alert-danger(style="display:none") Please select business process area
.form-group#postQuestionCommunication
    .col-xs-12
      select.form-control#communicationMode(name="supportCommunicationMode",data-placeholder="Communication Preference")
