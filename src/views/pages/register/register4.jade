extends ../../layouts/layout
include ../../mixin/headpanel
include ../../mixin/formHeading
include ../../mixin/SignupstepsTemplate
include ../../mixin/registerFormcontinue
block content 
    +headpanels('Sign up as ' + role )
    .container
      +signSteps({step:'step3'})
    .container.error-container 
    .container
      form.form-horizontal.signupForm(method='post', action='/register/step4')
        +previousData(formdata)
        input#_csrf(type='hidden', name='_csrf', value='{{csrfToken}}')
        +setFormHead({head:'Finally, who have you had the opportunity to work with?',text:"Other members may want to ask your advice"})
        .form-group
          .col-md-4.col-md-offset-4.col-sm-8.col-sm-offset-2
            input.form-control#companyName(type='text', name='companyName', data-errorholder='Company Name', placeholder='Enter a Company, Consultant, or Individual',multiple='multiple')
        .form-group
          .col-md-4.col-md-offset-4.col-sm-8.col-sm-offset-2
            button.btn.signup.btn-primary.form-control(type='submit') Continue 
        .form-group
          .col-md-4.col-md-offset-4.col-sm-8.col-sm-offset-2
            button.btn.signup.btn-link.form-control(type='submit') or Skip        
